@model PostCreateInputModel
@{
    this.ViewData["Title"] = "New forum post.";
}

<h1>@this.ViewData["Title"]</h1>

<script src="~/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<form method="post" asp-action="Create">
    <div>
        <label asp-for="@Model.Title"></label>
        <input asp-for="@Model.Title" class="form-control" />
        <span asp-validation-for="@Model.Title" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="@Model.Content"></label>
        <textarea asp-for="@Model.Content" class="form-control"></textarea>
        <span asp-validation-for="@Model.Content" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="@Model.MultipleTagId"></label>
        <select asp-for="@Model.MultipleTagId" asp-items="@Model.Tags.Select(x => new SelectListItem(x.Name, x.Id))" multiple class="form-control"></select>
        <span asp-validation-for="@Model.MultipleTagId" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="@Model.CategoryId"></label>
        <select asp-for="@Model.CategoryId" asp-items="@Model.Categories.Select(x => new SelectListItem(x.Name, x.Id))" class="form-control"></select>
        <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
    </div>
    <hr />
    <input type="submit" value="Create" class="btn btn-primary" />
</form>




