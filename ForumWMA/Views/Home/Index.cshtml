@model IndexViewModel
@{
    ViewData["Title"] = "Welcome to ForumWMA!";
}

@if (this.User.Identity.IsAuthenticated)
{
    <div class="text-center">
        <h1 class="display-4">@this.ViewData["Title"]</h1>
        <a asp-controller="Post" asp-action="Create" class="btn btn-primary btn-lg">Create new forum post</a>
    </div>
    <hr />
}

<div class="row">
    @foreach (var category in Model.Categories)
    {
        <div class="col-md-4 media mb-2">
            <img src="@category.ImageUrl" width="100" height="100" class="mr-3" alt="@category.Title">
            <div class="media-body">
                <h5 class="mt-0"><a href="@category.Url">@category.Name (@category.PostsCount)</a></h5>
                @category.Title
            </div>
        </div>
    }
</div>
